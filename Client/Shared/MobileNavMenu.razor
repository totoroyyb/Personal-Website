<div class="relative">
    @* Close Button *@
    <div class="absolute -top-12 right-6 h-8 w-8 p-1 border-2 
              hover:border-cyan-400 rounded transition-all duration-500
              "
              @onclick="CloseButtonClicked">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><g data-name="Layer 2"><g data-name="arrow-ios-downward"><rect width="24" height="24" opacity="0"/><path d="M12 16a1 1 0 0 1-.64-.23l-6-5a1 1 0 1 1 1.28-1.54L12 13.71l5.36-4.32a1 1 0 0 1 1.41.15 1 1 0 0 1-.14 1.46l-6 4.83A1 1 0 0 1 12 16z"/></g></g></svg>
    </div>

    <ul class="flex flex-col w-full content-between justify-between p-6 tracking-wider space-y-1">
        <li class="flex justify-end">
            <NavLink class="navtext" href="" Match="NavLinkMatch.All">
                Home
            </NavLink>
        </li>
        <li class="flex justify-end">
            <NavLink class="navtext" href="counter">
                Projects
            </NavLink>
        </li>
        <li class="flex justify-end">
            <NavLink class="navtext place-content-end" href="counter">
                Activities
            </NavLink>
        </li>
        <li class="flex justify-end">
            <NavLink class="navtext" href="fetchdata">
                Tutorials
            </NavLink>
        </li>
    </ul>
</div>

@code {
    [CascadingParameter] MainLayout mainLayout { get; set; }

    private void CloseButtonClicked()
    {
        mainLayout.ToggleMenu();
    }
}
