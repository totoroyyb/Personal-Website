<div class="py-3 px-1 md:px-3 w-full md:w-1/2">
    <div class="flex flex-col p-4 bg-white dark:bg-gray-700 rounded-lg adaptivetext">
        
        <div class="-mt-2 flex justify-between items-center space-x-1">
            <div class="flex flex-wrap space-x-2 items-center">
                @PillContent
            </div>

           @if (Role != null)
           {
                <div class="text-xs border-2 dark:border-gray-600 rounded-md p-1 px-2">
                    @Role
                </div>
           }
        </div>

        <div class="flex justify-between items-baseline">
            <p class="font-semibold text-lg">
                @Title
            </p>

            <p>@Date</p>
        </div>

        <div class="flex flex-col mt-1 space-y-1">
            @if (DetailContent == null)
            {
                <DetailEntry Content="Here is some detailed information"/>
                <DetailEntry Content="Another Info"/>
            }
            else
            {
                @DetailContent
            }
        </div>

        @if (Links != null)
        {
            <div class="mt-3 mb-1 flex flex-wrap 
                        justify-end text-ms space-x-2">
                @Links
            </div>
        }
    </div>
</div>

@code 
{
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string Date { get; set; }

    [Parameter]
    public string Role { get; set; }

    [Parameter]
    public RenderFragment PillContent { get; set; }

    [Parameter]
    public RenderFragment DetailContent { get; set; }

    [Parameter]
    public RenderFragment Links { get; set; }
}